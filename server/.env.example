# Server Configuration
NODE_ENV=development
PORT=5000

# Redis Configuration (required for caching and queue management)
REDIS_HOST=localhost
REDIS_PORT=6379

# AWS Bedrock - Claude 3.7 Sonnet (required for AI consent/popup detection)
# Get your credentials from AWS Console: https://console.aws.amazon.com/
AWS_ACCESS_KEY_ID=your-aws-access-key-id-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key-here
AWS_BEDROCK_REGION=eu-central-1
# Replace 'your-account-id' with your actual AWS account ID
AWS_BEDROCK_MODEL_ID=bedrock_model_id
CLAUDE_CONSENT_ENABLED=true
CLAUDE_POPUP_REMOVAL_ENABLED=true

# Optional: Gemini API (not currently used)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash

# Optional: Groq API (not currently used)
# Get your API key from: https://console.groq.com/
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.3-70b-versatile

# Optional: Ollama (not currently used)
USE_OLLAMA=false
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Optional: AI Agent Workflow (not currently used)
USE_AGENT_WORKFLOW=false
